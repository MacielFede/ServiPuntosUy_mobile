<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             xmlns:vm="clr-namespace:ServiPuntos.uy_mobile.ViewModels"
             x:Class="ServiPuntos.uy_mobile.Views.BranchesPage"
             x:DataType="vm:BranchesViewModel"
             Title="Nuestras estaciones">

  <maps:Map x:Name="BranchesMap"
            MapType="Street"
            IsShowingUser="True">
    <x:Arguments>
      <maps:MapSpan>
        <x:Arguments>
          <sensors:Location>
            <x:Arguments>
              <x:Double>-34.9011</x:Double>
              <x:Double>-56.1645</x:Double>
            </x:Arguments>
          </sensors:Location>
          <x:Double>0.1</x:Double>
          <x:Double>0.1</x:Double>
        </x:Arguments>
      </maps:MapSpan>
    </x:Arguments>
  </maps:Map>
</ContentPage>