<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:ServiPuntos.uy_mobile.ViewModels"
             x:Class="ServiPuntos.uy_mobile.Views.SignUpPage"
             x:DataType="viewModel:SignUpViewModel">
  <ContentPage.Content>
    <ScrollView>
      <VerticalStackLayout
        Padding="30,0"
        Margin="20">
        <Label
          Text="Registrarse"
          Style="{StaticResource Headline}"
          FontSize="20"
          SemanticProperties.HeadingLevel="Level1"
          Margin="0,0,0,40"/>

        <Entry
          x:Name="NameEntry"
          Placeholder="Nombre"
          Text="{Binding Name}"
          Margin="0,0,0,20"/>

        <Entry
          x:Name="EmailEntry"
          Placeholder="Email"
          Text="{Binding Email}"
          Margin="0,0,0,20"/>

        <Entry
          x:Name="PasswordEntry"
          Placeholder="ContraseÃ±a"
          IsPassword="True"
          Text="{Binding Password}"
          Margin="0,0,0,40"/>
        <Button
          x:Name="RegisterBtn"
          Text="Registrarse"
          SemanticProperties.Hint="SignUp"
          Command="{Binding Path=SignupCommand}"
          HorizontalOptions="Fill"
          Style="{StaticResource PrimaryButtonStyle}"/>
      </VerticalStackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
